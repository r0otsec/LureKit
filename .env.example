# Subdomain for phishing payload delivery (e.g., email links)
PHISH_DOMAIN=phish.yourdomain.com

# Subdomain for the landing page (proxied by redirector)
REDIRECT_DOMAIN=login.yourdomain.com

# Subdomain for Evilginx2 (optional, comment out if unused)
EVILGINX_DOMAIN=session.yourdomain.com

# Mailgun SMTP credentials
MAILGUN_SMTP_USER=postmaster@yourdomain.com
MAILGUN_SMTP_PASS=your-mailgun-smtp-password

# Country code (ISO) for who can access the phish page (e.g., GB, US)
ALLOWED_COUNTRY=GB

# The port for GoPhish admin interface (tunneled)
GOPHISH_ADMIN_PORT=3333

# DigitalOcean API token for Terraform
DO_TOKEN=TOKEN

# SSH public key to authorize access to the VPS instances
PUBLIC_SSH_KEY=PUBLIC_KEY

# SSH private key path (used by Ansible)
PRIVATE_SSH_KEY=PRIVATE_KEY